<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.7.5</version>
    </parent>
    <groupId>io.github.amings</groupId>
    <artifactId>mingle</artifactId>
    <version>1.0.1</version>
    <packaging>pom</packaging>
    <name>mingle</name>
    <description>mingle parent</description>
    <url>https://github.com/amings/mingle</url>
    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <url>https://www.apache.org/licenses/LICENSE-2.0</url>
        </license>
    </licenses>
    <developers>
        <developer>
            <name>Ming</name>
            <email>amings0622@gmail.com</email>
            <organization>io.github.amings</organization>
            <organizationUrl>https://github.com/amings</organizationUrl>
        </developer>
    </developers>
    <scm>
        <connection>scm:git:https://github.com/amings/mingle.git</connection>
        <developerConnection>scm:git:https://github.com/amings/mingle.git</developerConnection>
        <url>https://github.com/amings/mingle</url>
    </scm>
    <distributionManagement>
        <snapshotRepository>
            <id>ossrh</id>
            <url>https://s01.oss.sonatype.org/content/repositories/snapshots</url>
        </snapshotRepository>
        <repository>
            <id>ossrh</id>
            <url>https://s01.oss.sonatype.org/service/local/staging/deploy/maven2/</url>
        </repository>
    </distributionManagement>
    <properties>
        <java.version>1.8</java.version>
        <maven.compiler.source>${java.version}</maven.compiler.source>
        <maven.compiler.target>${java.version}</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <mingle.core.version>1.0.0</mingle.core.version>
        <mingle.svc.session.version>1.0.1</mingle.svc.session.version>
        <mingle.svc.redis.version>1.0.0</mingle.svc.redis.version>
        <mingle.svc.data.version>1.0.0</mingle.svc.data.version>
        <mingle.svc.action.rest.version>1.0.0</mingle.svc.action.rest.version>
        <mingle.utils.version>1.0.0</mingle.utils.version>
    </properties>
    <modules>
        <module>mingle-core</module>
        <module>mingle-svc-session</module>
        <module>mingle-svc-redis</module>
        <module>mingle-svc-data</module>
        <module>mingle-svc-action-rest</module>
        <module>mingle-utils</module>
    </modules>
    <dependencies>
        <!-- https://mvnrepository.com/artifact/org.projectlombok/lombok -->
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>1.18.24</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>io.github.amings</groupId>
                <artifactId>mingle-core</artifactId>
                <version>${mingle.core.version}</version>
            </dependency>
            <dependency>
                <groupId>io.github.amings</groupId>
                <artifactId>mingle-svc-session</artifactId>
                <version>${mingle.svc.session.version}</version>
            </dependency>
            <dependency>
                <groupId>io.github.amings</groupId>
                <artifactId>mingle-svc-redis</artifactId>
                <version>${mingle.svc.redis.version}</version>
            </dependency>
            <dependency>
                <groupId>io.github.amings</groupId>
                <artifactId>mingle-svc-data</artifactId>
                <version>${mingle.svc.data.version}</version>
            </dependency>
            <dependency>
                <groupId>io.github.amings</groupId>
                <artifactId>mingle-svc-action-rest</artifactId>
                <version>${mingle.svc.action.rest.version}</version>
            </dependency>
            <dependency>
                <groupId>io.github.amings</groupId>
                <artifactId>mingle-utils</artifactId>
                <version>${mingle.utils.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <profiles>
        <profile>
            <id>release</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-source-plugin</artifactId>
                        <version>2.2.1</version>
                        <executions>
                            <execution>
                                <id>attach-sources</id>
                                <goals>
                                    <goal>jar-no-fork</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <version>2.9.1</version>
                        <executions>
                            <execution>
                                <id>attach-javadocs</id>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-gpg-plugin</artifactId>
                        <version>3.0.1</version>
                        <executions>
                            <execution>
                                <id>sign-artifacts</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>sign</goal>
                                </goals>
                                <configuration>
                                    <keyname>${gpg.keyname}</keyname>
                                    <passphraseServerId>${gpg.keyname}</passphraseServerId>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.10.1</version>
                <configuration>
                    <source>${maven.compiler.source}</source>
                    <target>${maven.compiler.target}</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>